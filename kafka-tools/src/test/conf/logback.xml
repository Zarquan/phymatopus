<configuration>

	<!--+
	    | Default console appender (e.g. tomcat/logs/catalina.out).
	    | http://logback.qos.ch/manual/configuration.html
	    | http://logback.qos.ch/manual/appenders.html
	    | http://logback.qos.ch/manual/layouts.html
	    +-->
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<target>System.out</target>
        <encoder>
            <pattern>%date{ISO8601} %-5level [%thread] [%logger{0}] %message %n</pattern>
            <!-- %exception{short} -->
            <!-- %caller{2} -->
        </encoder>
	</appender>
	
	<!--+
	    | Firethorn logging.
	    +-->
	<logger name="uk.ac.roe.wfau.firethorn">
		<level value="DEBUG"/>
	</logger>
	<logger name="uk.ac.roe.wfau.firethorn.womble">
		<level value="WARN"/>
	</logger>
	<!--+
	    | Phymatopus logging.
	    +-->
	<logger name="uk.ac.roe.wfau.phymatopus">
		<level value="DEBUG"/>
	</logger>

	<!--+
	    | Spring loggers.
	    +-->
	<logger name="org.springframework.core">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.beans">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.context">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.http">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.web">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.aop">
		<level value="INFO" />
	</logger>

	<!--+
	    | Hibernate transactions.
        | http://stackoverflow.com/questions/1965454/spring-transaction-show-in-log
	    +-->
	<logger name="org.springframework.transaction">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.orm">
		<level value="INFO" />
	</logger>

	<!--+
	    | Hibernate loggers.
	    +-->
	<logger name="org.hibernate">
		<level value="INFO" />
	</logger>
	<logger name="org.hibernate.SQL">
		<level value="INFO" />
	</logger>

	<!--+
	    | StarLink VOTable parser.
	    +-->
	<logger name="uk.ac.starlink">
		<level value="INFO" />
	</logger>


	<!--+
	    | Root logger.
	    +-->
	<root>
		<priority value="${root-level:-INFO}" />
		<appender-ref ref="console" />
	</root>
	
</configuration>

